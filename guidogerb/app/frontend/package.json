{
  "name": "guidogerb-publishing-ui-packages",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "design-system",
    "design-system-header",
    "website",
    "examples/*"
  ],
  "scripts": {
    "dev": "npm run dev -w website",
    "build": "npm run build:libs && npm run build:website",
    "build:libs": "npm run build:design-system && npm run build:header",
    "build:design-system": "npm run build -w design-system",
    "build:header": "npm run build -w design-system-header",
    "build:website": "npm run build -w website",
    "preview": "npm run preview -w website",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rimraf **/node_modules **/dist **/package-lock.json ./package-lock.json"
  },
  "devDependencies": {
    "@eslint/compat": "1.2.6",
    "@eslint/eslintrc": "3.2.0",
    "@eslint/js": "9.19.0",
    "@stylistic/eslint-plugin": "3.0.1",
    "@types/js-beautify": "1.14.3",
    "@vitest/coverage-istanbul": "3.0.5",
    "eslint": "9.19.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.3",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-refresh": "0.4.18",
    "globals": "15.14.0",
    "npm-run-all": "4.1.5",
    "rimraf": "^5.0.0",
    "typescript-eslint": "8.23.0",
    "@typescript-eslint/eslint-plugin": "8.23.0",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "3.0.5"
  },
  "dependencies": {
  }
}
